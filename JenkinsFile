@Library('pipelib@master') _

node {
  def mvn = tool 'M3'
  def root = pwd()

  stage('Setup') {
    git([
      url: "https://github.com/venicegeo/pz-gateway",
      branch: "master"
    ])
  }

  stage('Archive') {
    sh "${mvn}/bin/mvn clean package -U -Dmaven.repo.local=${root}"
    mavenPush {
      mavenArtifact = 'target/piazza-gateway-1.0.0.jar'
    }
  }

  stage('Scans') {
//    dependencyCheck()
    ionConnect()
    sh """
      mkdir -p ${root}/.m2/repository
      ${mvn}/bin/mvn mvn clean org.jacoco:jacoco-maven-plugin:prepare-agent install \
        -Dmaven.repo.local=${root}/.m2/repository \
        -Pcoverage-per-test org.jacoco:jacoco-maven-plugin:report \
        -DdataFile=target/jacoco.exec
    """
    sonar()
  }

  stage('CI Deploy') {
    cfPush()
    zap()
    cfBgDeploy()
  }

  stage('Integration Testing') {
    postman()
  }

  stage('Reset') {
    git([
      url: "https://github.com/venicegeo/pz-gateway",
      branch: "master"
    ])
  }

  stage('Staging Deploy') {
    cfPush {
      cfDomain  = 'stage.geointservices.io'
      cfSpace   = 'stage'
    }
    cfBgDeploy {
      cfDomain  = 'stage.geointservices.io'
      cfSpace   = 'stage'
    }
  }

  stage('Final Scans') {
    sh """
      ${mvnHome}/bin/mvn install:install-file -Dmaven.repo.local=${root} -Dfile=pom.xml -DpomFile=pom.xml
    """
    fortify {
      fortifySource 'src/main/java/gateway{*.java,**/*.java}'
    }
  }

  stage('Cleanup') {
    deleteDir()
  }
}
